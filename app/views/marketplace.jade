extend layout
block content
  div(class="row")
    div(class="col-md-12")
      div(class="row")
        div(class="col-md-5")
          div(class="form")
            div(class="form-group")
              select(id="filter-select" class="form-control")
                option(value="motorbike") Motorbike
        div(class="col-md-3")
          div(class="form")
            div(class="form-group")
              select(id="filter-minimum" class="form-control")
                option(value="98") 98
                option(value="90") 95
                option(value="90") 90
        div(class="col-md-4 text-center")
          div(class="form")
            div(class="form-group")
              button(id="filter" class="btn btn-primary") Filter
      each image in locals.rows
        div(class="panel panel-default")
          div(class="row")
            div(class="col-sm-4")
              img(src="#{image.base64}" width="250px")
            div(class="col-sm-8")
              p=image.metadata
